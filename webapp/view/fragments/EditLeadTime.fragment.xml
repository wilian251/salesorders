<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
    <Panel
        headerText="{i18n>leadTimeTitle}"
        backgroundDesign="Transparent"
    >
        <headerToolbar>
            <Toolbar>
                <ObjectAttribute
                    active="false"
                    text="{leadTime>/leadTime/Spart} - {leadTime>/SpartDescription}"
                    textDirection="Inherit"
                    title="{i18n>mainFilterSector}"
                />
            </Toolbar>
        </headerToolbar>

        <VBox class="containerLeadTimeEdit">
            <VBox>
                <Title text="{i18n>leadTimeSaleOrder}"/>

                <VBox class="contentCycleLeadTime">
                    <VBox>
                        <Label text="{i18n>leadTimeDays}:"/>
                        <Input
                            type="Number"
                            value="{leadTime>/leadTime/SaleorderDays}"
                            valueState="{leadTime>/State/SaleorderDays/ValueState}"
                            valueStateText="{leadTime>/State/SaleorderDays/ValueStateText}"
                            change="onValidatedFieldsLeadTime"
                        />
                    </VBox>

                    <VBox>
                        <Label text="{i18n>leadTimeHour}:"/>
                        <Input
                            type="Number"
                            value="{leadTime>/leadTime/SaleorderHours}"
                            valueState="{leadTime>/State/SaleorderHours/ValueState}"
                            valueStateText="{leadTime>/State/SaleorderHours/ValueStateText}"
                            change="onValidatedFieldsLeadTime"
                        />
                    </VBox>

                    <VBox>
                        <Label text="{i18n>leadTimeMinutes}:"/>
                        <Input
                            type="Number"
                            value="{leadTime>/leadTime/SaleorderMin}"
                            valueState="{leadTime>/State/SaleorderMin/ValueState}"
                            valueStateText="{leadTime>/State/SaleorderMin/ValueStateText}"
                            change="onValidatedFieldsLeadTime"
                        />
                    </VBox>

                    <VBox>
                        <Label text="{i18n>leadTimeSeconds}:"/>
                        <Input
                            type="Number"
                            value="{leadTime>/leadTime/SaleorderSec}"
                            valueState="{leadTime>/State/SaleorderSec/ValueState}"
                            valueStateText="{leadTime>/State/SaleorderSec/ValueStateText}"
                            change="onValidatedFieldsLeadTime"
                        />
                    </VBox>       
                </VBox>

                <!--<Label text="{i18n>leadTimeDateHourFormatted}:"/>
                <Text
                    text="{leadTime>/leadTime/SaleorderFormatted}"
                />-->
            </VBox>
                    
            <VBox>
