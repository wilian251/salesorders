<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Panel
        headerText="{i18n>leadTimeTitle}"
        backgroundDesign="Transparent"
    >
        <f:SimpleForm
            id="SimpleFormEditLeadTime"
            editable="false"
            layout="ResponsiveGridLayout"
            labelSpanXL="12"
            labelSpanL="4"
            labelSpanM="8"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="4"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="2"
            columnsL="2"
            columnsM="2"
            singleContainerFullSize="false"
            backgroundDesign="Solid"
        >
            <f:content>
                <core:Title text="{i18n>leadTimeSaleOrder}"/>
                <Label text="{i18n>leadTimeDateInitial}"/>
                <DateTimePicker
                    showCurrentDateButton="true"
			        showCurrentTimeButton="true"
                    valueFormat="dd/MM/yyyy HH:mm:ss"
                    value=""
                />
                <Label text="{i18n>leadTimeDateFinish}"/>
                <DateTimePicker
                    showCurrentDateButton="true"
			        showCurrentTimeButton="true"
                    valueFormat="dd/MM/yyyy HH:mm:ss"
                />
                <Label text="{i18n>leadTimeDateHourFormatted}"/>
                <Text
                    text=""
                />
                        
                <core:Title text="{i18n>leadTimeShipping}"/>
                <Label text="{i18n>leadTimeDateInitial}"/>
                <DateTimePicker
                    showCurrentDateButton="true"
			        showCurrentTimeButton="true"
                    valueFormat="dd/MM/yyyy HH:mm:ss"
                />
                <Label text="{i18n>leadTimeDateFinish}"/>
                <DateTimePicker
                    showCurrentDateButton="true"
			        showCurrentTimeButton="true"
                    valueFormat="dd/MM/yyyy HH:mm:ss"
                />
                <Label text="{i18n>leadTimeDateHourFormatted}"/>
                <Text
                    text=""
                />

                <core:Title text="{i18n>leadTimeCredit}"/>
                <Label text="{i18n>leadTimeDateInitial}"/>
                <DateTimePicker
                    showCurrentDateButton="true"
			        showCurrentTimeButton="true"
                    valueFormat="dd/MM/yyyy HH:mm:ss"
                />
                <Label text="{i18n>leadTimeDateFinish}"/>
                <DateTimePicker
                    showCurrentDateButton="true"
			        showCurrentTimeButton="true"
                    valueFormat="dd/MM/yyyy HH:mm:ss"
                />
                <Label text="{i18n>leadTimeDateHourFormatted}"/>
                <Text
                    text=""
                />

                <core:Title text="{i18n>leadTimeTransport}"/>
                <Label text="{i18n>leadTimeDateInitial}"/>
                <DateTimePicker
                    showCurrentDateButton="true"
			        showCurrentTimeButton="true"
                    valueFormat="dd/MM/yyyy HH:mm:ss"
                />
                <Label text="{i18n>leadTimeDateFinish}"/>
                <DateTimePicker
                    showCurrentDateButton="true"
			        showCurrentTimeButton="true"
                    valueFormat="dd/MM/yyyy HH:mm:ss"
                />
                <Label text="{i18n>leadTimeDateHourFormatted}"/>
                <Text
                    text=""
                />

                <core:Title text="{i18n>leadTimeInvoicing}"/>
                <Label text="{i18n>leadTimeDateInitial}"/>
                <DateTimePicker
                    showCurrentDateButton="true"
			        showCurrentTimeButton="true"
                    valueFormat="dd/MM/yyyy HH:mm:ss"
                />
                <Label text="{i18n>leadTimeDateFinish}"/>
                <DateTimePicker
                    showCurrentDateButton="true"
			        showCurrentTimeButton="true"
                    valueFormat="dd/MM/yyyy HH:mm:ss"
                />
                <Label text="{i18n>leadTimeDateHourFormatted}"/>
                <Text
                    text=""
                />

                <core:Title text="{i18n>leadTimeTotal}"/>
                <Label text="{i18n>leadTimeDateHourFormatted}"/>
                <Text
                    text=""
                />
            </f:content>      
        </f:SimpleForm>
    </Panel>
</core:FragmentDefinition>